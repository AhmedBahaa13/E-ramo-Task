
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- background color -->
  <item>
    <shape android:shape="rectangle">
<!--<solid android:color="@color/white"/>-->
      <corners android:topLeftRadius="18dp"
          android:topRightRadius="18dp"/>    </shape>
  </item>
  <!--  left shadow -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:angle="180"
          android:centerColor="#00FF0000"
          android:centerX="0.98"
          android:endColor="#5CDAC7C7"
          android:startColor="#00FF0000" />

      <corners android:topLeftRadius="18dp"
          android:topRightRadius="18dp"/>
    </shape>
  </item>
  <!--  right shadow -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:angle="360"
          android:centerColor="#00FF0000"
          android:centerX="0.98"
          android:endColor="#5CDAC7C7"
          android:startColor="#00FF0000" />

      <corners android:topLeftRadius="18dp"
          android:topRightRadius="18dp"/>
    </shape>
  </item>
  <!--  top shadow -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:angle="270"
          android:centerColor="#00FF0000"
          android:centerY="0.2"
          android:endColor="@color/white"
          android:startColor="#5CDAC7C7" />
      <corners android:topLeftRadius="18dp"
          android:topRightRadius="18dp"/>
    </shape>
  </item>

</layer-list>