<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnSurface">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/blue_with_a_hint_of_purple</item>
        <item name="colorOnPrimary">@color/purple_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/light_navy</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    // Task Themes
    <style name="TopStoreItemShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_10sdp</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_10sdp</item>
    </style>

     <style name="CouponItemShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
         <item name="cornerFamily">rounded</item>
         <item name="cornerSizeTopLeft">@dimen/_12sdp</item>
         <item name="cornerSizeTopRight">@dimen/_12sdp</item>
         <item name="cornerSizeBottomLeft">@dimen/_12sdp</item>
         <item name="cornerSizeBottomRight">@dimen/_12sdp</item>
    </style>

    <style name="CategoryItemShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
         <item name="cornerFamily">rounded</item>
         <item name="cornerSizeTopLeft">@dimen/_6sdp</item>
         <item name="cornerSizeTopRight">@dimen/_6sdp</item>
         <item name="cornerSizeBottomLeft">@dimen/_6sdp</item>
         <item name="cornerSizeBottomRight">@dimen/_6sdp</item>
    </style>

    <style name="CornerRound" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>
</resources>